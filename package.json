{
  "name": "@zondax/izari-filecoin-tools",
  "version": "0.0.0",
  "description": "",
  "main": "dist/cjs/index.js",
  "module": "dist/mjs/index.js",
  "exports": {
    ".": {
      "import": "./dist/mjs/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "scripts": {
    "build:mjs": "rm -fr dist/mjs && tsc -p tsconfig.json && echo '{ \"type\": \"module\" }' > dist/mjs/package.json",
    "build:cjs": "rm -fr dist/cjs && tsc -p tsconfig-cjs.json && echo '{ \"type\": \"commonjs\" }' > dist/cjs/package.json",
    "build": "yarn build:mjs && yarn build:cjs",
    "lint": "eslint .",
    "lint:fix": "eslint --fix . ",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "react:start": "yarn test:prepare && cd tests/package/react-app && yarn test:install && yarn start",
    "test:generate": "ts-node tests/utils/generator.ts",
    "test:prepare": "yarn build && yalc publish",
    "test:react": "yarn test:prepare && cd tests/package/react-app && yarn test:install && yarn test",
    "test:node:cjs": "yarn test:prepare && cd tests/package/cjs && yarn test:install && node index.js",
    "test:node:mjs": "yarn test:prepare && cd tests/package/mjs && yarn test:install && node index.js",
    "test:node": "yarn test:node:cjs && yarn test:node:mjs",
    "test:jest": "jest ./tests/jest",
    "test": "yarn test:jest && yarn test:node && yarn test:react"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Zondax/izari-filecoin-tools.git"
  },
  "keywords": [
    "Izari",
    "Filecoin",
    "Smart",
    "Contract",
    "Blockchain",
    "Signing",
    "Tools",
    "FVM",
    "FEVM"
  ],
  "author": "Zondax AG",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Zondax/izari-filecoin-tools/issues"
  },
  "homepage": "https://github.com/Zondax/izari-filecoin-tools#readme",
  "devDependencies": {
    "@glif/filecoin-address": "^2.0.37",
    "@types/jest": "^29.4.0",
    "@types/secp256k1": "^4.0.3",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.33.0",
    "jest": "^29.4.2",
    "jest-ts-webcompat-resolver": "^1.0.0",
    "prettier": "^2.8.4",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "axios": "^1.3.2",
    "base32-decode": "^1.0.0",
    "bip32": "^3.1.0",
    "bip39": "^3.0.4",
    "blakejs": "^1.2.1",
    "secp256k1": "^5.0.0",
    "tiny-secp256k1": "^2.2.1",
    "leb128": "^0.0.5"
  },
  "files": [
    "dist"
  ]
}
